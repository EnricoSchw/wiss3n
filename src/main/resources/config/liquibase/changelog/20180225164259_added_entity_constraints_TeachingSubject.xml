<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity TeachingSubject.
    -->
    <changeSet id="20180225164259-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="teaching_subject"
                                 constraintName="fk_teaching_subject_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

        <addForeignKeyConstraint baseColumnNames="teaching_subjects_id"
                                 baseTableName="teaching_subject_tag"
                                 constraintName="fk_teaching_subject_tag_teaching_subjects_id"
                                 referencedColumnNames="id"
                                 referencedTableName="teaching_subject"/>
        <addForeignKeyConstraint baseColumnNames="tags_id"
                                 baseTableName="teaching_subject_tag"
                                 constraintName="fk_teaching_subject_tag_tags_id"
                                 referencedColumnNames="id"
                                 referencedTableName="tag"/>
        
        <addForeignKeyConstraint baseColumnNames="school_class_id"
                                 baseTableName="teaching_subject"
                                 constraintName="fk_teaching_subject_school_class_id"
                                 referencedColumnNames="id"
                                 referencedTableName="school_class"/>

    </changeSet>
</databaseChangeLog>
